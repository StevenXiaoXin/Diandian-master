<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <include
        layout="@layout/activity_title"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="bottom">
        <TextView
            android:id="@+id/pay_money"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:textColor="#333333"
            android:text="300"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/second_font"
            android:textColor="#333333"
            android:text="元"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#666666"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/second_font"
            android:textColor="#666666"
            android:text="支付费用"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#666666"
            android:layout_weight="1"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/second_font"
            android:textColor="#666666"
            android:text="停车位置"/>

        <TextView
            android:id="@+id/pay_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/second_font"
            android:textColor="#666666"
            android:layout_alignParentRight="true"
            android:text="停车场1车位1"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/second_font"
            android:textColor="#666666"
            android:text="停车时间"/>

        <TextView
            android:id="@+id/pay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/second_font"
            android:textColor="#666666"
            android:gravity="right"
            android:lineSpacingMultiplier="1.5"
            android:layout_alignParentRight="true"
            android:text="2017年4月21日15:14至\n2017年4月22日06:11"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/second_font"
            android:textColor="#666666"
            android:text="停车时长"/>

        <TextView
            android:id="@+id/pay_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/second_font"
            android:textColor="#666666"
            android:gravity="right"
            android:lineSpacingMultiplier="1.5"
            android:layout_alignParentRight="true"
            android:text="0天6时50分"/>

    </RelativeLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/pay_ok"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginBottom="25dp"
        android:textSize="@dimen/second_font"
        android:textColor="@color/white"
        android:text="确认支付"
        android:background="@drawable/login_btn"
        android:layout_height="wrap_content" />

</LinearLayout>