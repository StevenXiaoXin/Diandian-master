<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <include
        layout="@layout/activity_title"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/register_input_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            android:textSize="@dimen/second_font"
            android:text="旧\u2000密\u2000码："/>

        <EditText
            android:id="@+id/updatepwd_oldpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="#333333"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/second_font"
            android:hint="若包含字母，请注意大小写"
            android:textColorHint="#999999"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/register_input_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            android:textSize="@dimen/second_font"
            android:text="修改密码："/>

        <EditText
            android:id="@+id/updatepwd_newpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="#333333"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/second_font"
            android:hint="密码请设置为8-16位"
            android:textColorHint="#999999"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/register_input_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            android:textSize="@dimen/second_font"
            android:text="确认密码："/>

        <EditText
            android:id="@+id/updatepwd_repwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="#333333"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/second_font"
            android:hint="请再次输入密码"
            android:textColorHint="#999999"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/updatepwd_btn"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:padding="12dp"
        android:textSize="@dimen/second_font"
        android:textColor="@color/white"
        android:text="确认修改"
        android:background="@drawable/login_btn"
        android:layout_height="wrap_content" />

</LinearLayout>