<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:paddingTop="15dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="5dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_paylist_name"
            android:layout_width="wrap_content"
            android:textSize="@dimen/second_font"
            android:singleLine="true"
            android:textColor="#666666"
            android:text="awdadwa"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_playlist_time"
            android:layout_width="wrap_content"
            android:textSize="@dimen/second_font"
            android:singleLine="true"
            android:textColor="#666666"
            android:text="awdadwa"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_paylist_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/second_font"
        android:layout_marginLeft="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginTop="8dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/playlist_cancel_btn"
        android:textColor="@color/white"
        android:text="取消"/>

    <TextView
        android:id="@+id/item_paylist_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/second_font"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:background="@drawable/login_btn"
        android:text="支付"/>
</LinearLayout>