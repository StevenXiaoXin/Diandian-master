<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:gravity="center"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/partlist_icon"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/item_partlist_name"
            android:textSize="@dimen/second_font"
            android:text="停车场1"
            android:textColor="#333333"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_partlist_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textSize="@dimen/thrid_font"
            android:text="空余车位：21个"/>

        <TextView
            android:id="@+id/item_partlist_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/thrid_font"
            android:singleLine="true"
            android:text="【呗卷帘我的空间埃里克大奖啊看来我 】"/>

        <TextView
            android:id="@+id/item_partlist_favore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:background="@drawable/partlist_favore_bg"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/thrid_font"
            android:text="今日有优惠"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/item_partlist_gsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/partlist_gsp"/>


</LinearLayout>